<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.namazustudios.socialengine</groupId>
    <artifactId>namazu-socialengine-system</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>namazu-socialengine-system</name>

    <scm>
        <url>ssh://git@bitbucket.namazustudios.net:7999/soc/socialengine-java-server.git</url>
        <connection>scm:git:ssh://git@bitbucket.namazustudios.net:7999/soc/socialengine-java-server.git</connection>
        <developerConnection>scm:git:ssh://git@bitbucket.namazustudios.net:7999/soc/socialengine-java-server.git
        </developerConnection>
    </scm>

    <modules>
        <module>common</module>
        <module>rest-api</module>
        <module>web-ui</module>
        <module>service</module>
        <module>service-redis</module>
        <module>mongo-dao</module>
        <module>dao</module>
        <module>setup</module>
        <module>rest-war</module>
        <module>guice</module>
        <module>rest-guice</module>
        <module>web-ui-war</module>
        <module>common-util</module>
        <module>lucene-pojo</module>
        <module>lucene-indexer</module>
        <module>mongo-lucene</module>
        <module>rt-common</module>
        <module>rt-server</module>
        <module>rt-mina</module>
        <module>rt-server-lua</module>
        <module>rt-guice-example</module>
        <module>rt-client</module>
        <module>rt-dao</module>
        <module>docker</module>
        <module>code-serve</module>
        <module>code-serve-guice</module>
        <module>code-serve-war</module>
    </modules>

    <properties>
        <test.suites>**/*UnitTestSuite.java</test.suites>
        <guice.version>4.1.0</guice.version>
        <guice.bridge.version>2.5.0-b32</guice.bridge.version>
        <javax.inject.version>1</javax.inject.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <javax.servlet.api.version>3.1.0</javax.servlet.api.version>
        <slf4j.version>1.7.25</slf4j.version>
        <guava.version>21.0</guava.version>
        <commons.lang.version>3.3.2</commons.lang.version>
        <jaxrs.api.version>2.0.1</jaxrs.api.version>
        <jersey.version>2.25.1</jersey.version>
        <gwt.version>2.8.1</gwt.version>
        <gwt.plugin.version>2.8.0</gwt.plugin.version>
        <javax.validation.version>1.0.0.GA</javax.validation.version>
        <lucene.version>5.1.0</lucene.version>
        <mongo.java.driver.version>3.4.0</mongo.java.driver.version>
        <testng.version>6.9.4</testng.version>
        <test.groups>unit</test.groups>
        <surefire.version>2.18.1</surefire.version>
        <testng.version>6.8.21</testng.version>
        <jackson.version>2.8.8</jackson.version>
        <bson4jackson.version>2.4.0</bson4jackson.version>
        <reflections.version>0.9.10</reflections.version>
        <swagger.version>1.5.13</swagger.version>
        <rocoto.version>6.2</rocoto.version>
        <dozer.version>6.0.0</dozer.version>
        <bval.version>1.1.2</bval.version>
        <bval.guice.version>0.5</bval.guice.version>
        <commons.logging.version>1.2</commons.logging.version>
        <restfb.version>2.0.0-rc.2</restfb.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>${slf4j.version}</version>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-simple</artifactId>
            <version>${slf4j.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.5.1</version>
                <inherited>true</inherited>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>buildnumber-maven-plugin</artifactId>
                <version>1.4</version>
                <executions>
                    <execution>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>create-metadata</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <doCheck>false</doCheck>
                    <doUpdate>false</doUpdate>
                    <timestampFormat>yyyy-MM-dd HH:mm:ss</timestampFormat>
                    <addOutputDirectoryToResources>true</addOutputDirectoryToResources>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>