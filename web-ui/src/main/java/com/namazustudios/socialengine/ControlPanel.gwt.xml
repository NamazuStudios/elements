<?xml version="1.0" encoding="UTF-8"?>

<module rename-to='ControlPanel'>

  <!-- Inherit the core Web Toolkit stuff -->
  <inherits name='com.google.gwt.user.User' />
  <inherits name="com.google.gwt.logging.Logging"/>
  <inherits name="com.google.gwt.uibinder.UiBinder"/>

  <!-- Gin, Guice, and Dependency Injection -->
  <inherits name="com.google.gwt.inject.Inject"/>
  <inherits name="com.gwtplatform.mvp.Mvp"/>
  <inherits name='com.gwtplatform.mvp.MvpWithEntryPoint'/>

  <set-configuration-property name="gin.ginjector.modules"
                              value="com.namazustudios.socialengine.client.ControlPanelMain"/>

  <set-configuration-property name="gwtp.bootstrapper"
                              value="com.namazustudios.socialengine.client.ControlPanelBootstrapper"/>

  <!-- Namazu models and REST client library -->
  <inherits name="org.fusesource.restygwt.RestyGWT"/>
  <inherits name="com.namazustudios.socialengine.Common"/>

  <!-- Other libraries -->
  <inherits name="com.google.common.collect.Collect"/>

  <!-- GWT Bootstrap and associated modules -->
  <inherits name="org.gwtbootstrap3.GwtBootstrap3"/>
  <inherits name="org.gwtbootstrap3.GwtBootstrap3Theme"/>
  <inherits name="org.gwtbootstrap3.extras.animate.Animate"/>

  <!-- Specify the paths for translatable code (not sure if this is necessary for each) -->
  <source path="client"/>
  <source path="client/rest"/>
  <source path="client/guice"/>
  <source path="client/login"/>

</module>
