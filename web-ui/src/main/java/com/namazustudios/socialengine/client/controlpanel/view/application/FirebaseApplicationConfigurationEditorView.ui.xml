<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:m="urn:import:com.namazustudios.socialengine.client.modal">

    <ui:style>
        .root-panel {
            margin: 0 auto;
            width: 80%;
        }
    </ui:style>

    <ui:with field="nameTokens" type="com.namazustudios.socialengine.client.controlpanel.NameTokens"/>

    <b:Panel>

        <m:ErrorModal ui:field="errorModal"/>

        <b:PanelHeader>
            <b:Heading size="H3" text="Firebase Configuration"/>
        </b:PanelHeader>

        <b:PanelBody>
            <b:Form addStyleNames="{style.root-panel}">
                <b:FieldSet>

                    <b:Breadcrumbs ui:field="breadcrumbs">
                        <b:AnchorListItem text="Applications" href="#{nameTokens.getApplicationEditTable}"/>
                    </b:Breadcrumbs>

                    <b:FormGroup ui:field="projectIdFormGroup">
                        <b:FormLabel for="projectId">Project ID</b:FormLabel>
                        <b:TextBox placeholder="Project ID" ui:field="projectIdTextBox"/>
                        <b:Label ui:field="projectIdWarningLabel" visible="false" text="Project ID Invalid" type="DANGER"/>
                    </b:FormGroup>

                    <b:FormGroup ui:field="serviceAccountCredentialsFormGroup">
                        <b:FormLabel for="serviceAccountCredentials">Service Account Credentials</b:FormLabel>
                        <b:TextArea placeholder="Service Account Credentials" ui:field="serviceAccountCredentialsTextArea"/>
                        <b:Label ui:field="serviceAccountCredentialsWarningLabel" visible="false" text="Service Account Credentials Invalid" type="DANGER"/>
                    </b:FormGroup>

                    <b:Button ui:field="create">Submit</b:Button>

                </b:FieldSet>
            </b:Form>

        </b:PanelBody>

    </b:Panel>

</ui:UiBinder>
