<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b3="urn:import:org.gwtbootstrap3.extras.toggleswitch.client.ui">

    <b:ModalBody>
        <b:Form>
            <b:FormGroup ui:field="titleFormGroup">
                <b:FormLabel for="title">Username</b:FormLabel>
                <b:TextBox placeholder="Title" ui:field="titleTextBox"/>
                <b:Label ui:field="titleWarningLabel" visible="false" text="TItle must be alpha-numeric." type="DANGER"/>
            </b:FormGroup>

            <b:FormGroup ui:field="descriptionFormGroup">
                <b:FormLabel for="description">Description</b:FormLabel>
                <b:TextArea placeholder="Description" ui:field="descriptionTextArea"/>
                <b:Label ui:field="descriptionWarningLabel" visible="false" text="Description not valid." type="DANGER"/>
            </b:FormGroup>

            <b:FormGroup ui:field="imageUrlFormGroup">
                <b:FormLabel for="imageUrl">Image URL</b:FormLabel>
                <b:TextBox placeholder="Image URL" ui:field="imageUrlTextBox"/>
                <b:Label ui:field="imageUrlWarningLabel" visible="false" text="Invalid Image URL" type="DANGER"/>
            </b:FormGroup>

            <b:FormGroup ui:field="prizeInfoFormGroup">
                <b:FormLabel for="prizeInfo">Prize Info</b:FormLabel>
                <b:TextBox placeholder="Prize Info" ui:field="prizeInfoTextBox"/>
                <b:Label ui:field="prizeInfoWarningLabel" visible="false" text="Prize Info Invalid." type="DANGER"/>
            </b:FormGroup>

            <b:Button ui:field="submit">Submit</b:Button>

        </b:Form>
    </b:ModalBody>

</ui:UiBinder>
