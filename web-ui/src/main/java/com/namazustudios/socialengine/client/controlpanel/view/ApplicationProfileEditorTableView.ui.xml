<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b.gwt="urn:import:org.gwtbootstrap3.client.ui.gwt"
             xmlns:m="urn:import:com.namazustudios.socialengine.client.modal">

    <ui:style>

        .root-panel {
            margin: 0 auto;
            width: 100%;
        }

        .table {}

        .searchbox {
            width:35%;
            margin-bottom: 5px;
        }

    </ui:style>

    <b:Panel addStyleNames="{style.root-panel}">

        <b:PanelHeader>
            <b:Heading size="H3" text="Application Profiles"/>
        </b:PanelHeader>

        <b:PanelBody>

            <m:ErrorModal ui:field="errorModal"/>
            <m:ConfirmationModal ui:field="confirmationModal"/>

            <b:InputGroup addStyleNames="{style.searchbox}">
                <b:InputGroupAddon icon="USER">User</b:InputGroupAddon>
                <b:TextBox ui:field="applicationProfileSearchTextBox" placeholder="Search Application Profiles" autoComplete="false"/>
            </b:InputGroup>

            <b.gwt:CellTable ui:field="applicationProfileEditorCellTable" bordered="true"
                                condensed="true"                          striped="true"
                                hover="true"                              addStyleNames="{style.table}"/>

            <b:Pagination ui:field="applicationProfileEditorCellTablePagination"/>

        </b:PanelBody>

    </b:Panel>
</ui:UiBinder>
