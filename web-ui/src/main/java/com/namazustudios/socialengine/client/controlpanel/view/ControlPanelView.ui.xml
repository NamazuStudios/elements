<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field="nameTokens" type="com.namazustudios.socialengine.client.controlpanel.NameTokens"/>

    <g:ScrollPanel>
        <b:Container>
            <b:Navbar position="FIXED_TOP">
                <b:Container>

                    <b:NavbarHeader>
                        <b:NavbarBrand ui:field="brand" targetHistoryToken="{nameTokens.getMain}">Namazu Social Engine</b:NavbarBrand>
                        <b:NavbarCollapseButton dataTarget="#navbar-collapse"/>
                    </b:NavbarHeader>

                    <b:NavbarCollapse>
                        <b:NavbarNav>

                            <b:ListDropDown>
                                <b:AnchorButton dataToggle="DROPDOWN">Users</b:AnchorButton>
                                <b:DropDownMenu>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getUserEdit}">Create New User</b:AnchorListItem>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getUserEditTable}">View/Edit Existing Users</b:AnchorListItem>
                                </b:DropDownMenu>
                            </b:ListDropDown>

                            <b:ListDropDown>
                                <b:AnchorButton dataToggle="DROPDOWN">Social</b:AnchorButton>
                                <b:DropDownMenu>
                                    <b:AnchorListItem>View/Edit Existing Campaigns</b:AnchorListItem>
                                    <b:AnchorListItem>View/Edit Entrants</b:AnchorListItem>
                                </b:DropDownMenu>
                            </b:ListDropDown>

                            <b:ListDropDown>
                                <b:AnchorButton dataToggle="DROPDOWN">Short Links</b:AnchorButton>
                                <b:DropDownMenu>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getShortLinkCreate}">Create New Short Link</b:AnchorListItem>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getShortLinkEditTable}">View Short Links</b:AnchorListItem>
                                </b:DropDownMenu>
                            </b:ListDropDown>

                            <b:AnchorListItem text="Logout" ui:field="logout"/>

                        </b:NavbarNav>
                    </b:NavbarCollapse>

                    <g:SimplePanel ui:field="contentContainer"/>

                </b:Container>
            </b:Navbar>
        </b:Container>
    </g:ScrollPanel>

</ui:UiBinder>
