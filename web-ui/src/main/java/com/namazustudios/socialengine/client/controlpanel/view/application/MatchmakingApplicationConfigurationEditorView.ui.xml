<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:m="urn:import:com.namazustudios.socialengine.client.modal">

    <ui:style>
        .root-panel {
            margin: 0 auto;
            width: 80%;
        }
    </ui:style>

    <ui:with field="nameTokens" type="com.namazustudios.socialengine.client.controlpanel.NameTokens"/>

    <b:Panel>

        <m:ErrorModal ui:field="errorModal"/>

        <b:PanelHeader>
            <b:Heading size="H3" text="Matchmaking Configuration"/>
        </b:PanelHeader>

        <b:PanelBody>
            <b:Form addStyleNames="{style.root-panel}">
                <b:FieldSet>

                    <b:Breadcrumbs ui:field="breadcrumbs">
                        <b:AnchorListItem text="Applications" href="#{nameTokens.getApplicationEditTable}"/>
                    </b:Breadcrumbs>

                    <b:FormGroup ui:field="schemeFormGroup">
                        <b:FormLabel for="scheme">Matchmaking Scheme</b:FormLabel>
                        <b:TextBox placeholder="Scheme" ui:field="schemeTextBox"/>
                        <b:Label ui:field="schemeWarningLabel" visible="false" text="Invalid Scheme" type="DANGER"/>
                    </b:FormGroup>

                    <b:FormGroup ui:field="successFormGroup">

                        <b:FormLabel for="success">Success Callback Module</b:FormLabel>
                        <b:TextBox placeholder="Module" ui:field="successModuleTextBox"/>
                        <b:Label ui:field="successModuleWarningLabel" visible="false" text="Invalid Module Name" type="DANGER"/>

                        <b:FormLabel for="success">Success Callback Method</b:FormLabel>
                        <b:TextBox placeholder="Method" ui:field="successMethodTextBox"/>
                        <b:Label ui:field="successMethodWarningLabel" visible="false" text="Invalid Method Name" type="DANGER"/>

                    </b:FormGroup>

                    <b:Button ui:field="create">Submit</b:Button>

                </b:FieldSet>
            </b:Form>

        </b:PanelBody>

    </b:Panel>

</ui:UiBinder>