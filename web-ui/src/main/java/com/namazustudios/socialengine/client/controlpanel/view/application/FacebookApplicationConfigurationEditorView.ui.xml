<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:m="urn:import:com.namazustudios.socialengine.client.modal">

    <ui:style>
        .root-panel {
            margin: 0 auto;
            width: 80%;
        }
    </ui:style>

    <ui:with field="nameTokens" type="com.namazustudios.socialengine.client.controlpanel.NameTokens"/>

    <b:Panel>

        <m:ErrorModal ui:field="errorModal"/>

        <b:PanelHeader>
            <b:Heading size="H3" text="Facebook Configuration"/>
        </b:PanelHeader>

        <b:PanelBody>
            <b:Form addStyleNames="{style.root-panel}">
                <b:FieldSet>

                    <b:Breadcrumbs ui:field="breadcrumbs">
                        <b:AnchorListItem text="Applications" href="#{nameTokens.getApplicationEditTable}"/>
                    </b:Breadcrumbs>

                    <b:FormGroup ui:field="applicationIdFormGroup">
                        <b:FormLabel for="applicationId">Application ID</b:FormLabel>
                        <b:TextBox placeholder="Facebook AppID" ui:field="applicationIdTextBox"/>
                        <b:Label ui:field="applicationIdWarningLabel" visible="false" text="Invalid AppID Format" type="DANGER"/>
                    </b:FormGroup>

                    <b:FormGroup ui:field="applicationSecretFormGroup">
                        <b:FormLabel for="applicationSecret">Application Secret</b:FormLabel>
                        <b:TextBox placeholder="Application Secret" ui:field="applicationSecretTextBox"/>
                        <b:Label ui:field="applicationSecretWarningLabel" visible="false" text="Invalid Application Secret Format" type="DANGER"/>
                    </b:FormGroup>

                    <b:Button ui:field="create">Submit</b:Button>

                </b:FieldSet>
            </b:Form>

        </b:PanelBody>

    </b:Panel>

</ui:UiBinder>