<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b.gwt="urn:import:org.gwtbootstrap3.client.ui.gwt"
             xmlns:m="urn:import:com.namazustudios.socialengine.client.modal">

    <ui:style>

        .root-panel {
            margin: 0 auto;
            width: 100%;
        }

        .table {}

        .searchbox {
            width:35%;
            margin-bottom: 5px;
        }

    </ui:style>

    <b:Container>

        <b:Row>
            <b:Button ui:field="addPrize" icon="PLUS" />
        </b:Row>

        <b:Row>
            <b:Panel addStyleNames="{style.root-panel}">

                <m:ErrorModal ui:field="errorModal"/>
                <m:ConfirmationModal ui:field="confirmationModal"/>

                <b:PanelHeader>
                    <b:Heading ui:field="tableHeader" size="H3" text="GameOn Prizes"/>
                </b:PanelHeader>

                <b:PanelBody>
                    <b.gwt:CellTable ui:field="prizeEditorCellTable" bordered="true"
                                     condensed="true"                striped="true"
                                     hover="true"                    addStyleNames="{style.table}"/>
                </b:PanelBody>

            </b:Panel>
        </b:Row>
    </b:Container>

</ui:UiBinder>
