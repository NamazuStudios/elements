<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:m="urn:import:com.namazustudios.socialengine.client.modal"
             xmlns:w="urn:import:com.namazustudios.socialengine.client.widget">

    <ui:style>
        .root-panel {
            margin: 0 auto;
            width: 80%;
        }
    </ui:style>

    <b:Panel>

        <m:ErrorModal ui:field="errorModal"/>

        <b:PanelHeader>
            <b:Heading size="H3" text="Create new User"/>
        </b:PanelHeader>

        <b:PanelBody>
            <b:Form addStyleNames="{style.root-panel}">
                <b:FieldSet>

                    <b:Legend>User Details</b:Legend>

                    <b:FormGroup ui:field="usernameFormGroup">
                        <b:FormLabel for="username">Username</b:FormLabel>
                        <b:TextBox b:id="username" placeholder="Username" ui:field="usernameTextBox"/>
                    </b:FormGroup>

                    <b:FormGroup ui:field="emailFormGroup">
                        <b:FormLabel for="email">Email</b:FormLabel>
                        <b:TextBox b:id="email" placeholder="Email" ui:field="emailTextBox"/>
                    </b:FormGroup>

                    <b:FormGroup ui:field="passwordFormGroup">
                        <b:FormLabel for="password">Password</b:FormLabel>
                        <b:Input b:id="password" type="PASSWORD" placeholder="(password)" ui:field="passwordInput"/>
                    </b:FormGroup>

                    <b:FormGroup ui:field="passwordConfirmFormGroup">
                        <b:FormLabel for="passwordConfirm">Confirm Password</b:FormLabel>
                        <b:Input b:id="passwordConfirm" type="PASSWORD" placeholder="(confirm password)" ui:field="passwordConfirmInput"/>
                    </b:FormGroup>

                    <b:FormGroup ui:field="levelFormGroup">
                        <b:FormLabel for="userLevel">User Level</b:FormLabel>
                        <w:UserLevelEnumDropDown ui:field="levelDropdown">
                            <b:Anchor ui:field="levelAnchor" dataToggle="DROPDOWN">(please select)</b:Anchor>
                            <b:DropDownMenu b:id="userLevel">
                                <w:UserLevelAnchorListItem enumerant="UNPRIVILEGED">Unprivileged User</w:UserLevelAnchorListItem>
                                <w:UserLevelAnchorListItem enumerant="USER">Normal User</w:UserLevelAnchorListItem>
                                <w:UserLevelAnchorListItem enumerant="SUPERUSER">Super-User</w:UserLevelAnchorListItem>
                            </b:DropDownMenu>
                        </w:UserLevelEnumDropDown>
                    </b:FormGroup>

                    <b:Button ui:field="create">Create</b:Button>

                </b:FieldSet>
            </b:Form>

        </b:PanelBody>

    </b:Panel>

</ui:UiBinder>