<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:m="urn:import:com.namazustudios.socialengine.client.modal">

    <ui:style>
        .root-panel {
            margin: 0 auto;
            width:25%;
        }
    </ui:style>

    <b:Panel>

        <m:ErrorModal ui:field="errorModal">
        </m:ErrorModal>

        <b:PanelHeader>
            <b:Heading size="H3" text="Namazu Social Engine"/>
        </b:PanelHeader>

        <b:PanelBody>
            <b:Form addStyleNames="{style.root-panel}">
                <b:FieldSet>

                    <b:Legend>Welcome!</b:Legend>

                    <b:FormGroup ui:field="usernameFormGroup">
                        <b:FormLabel for="username">Login</b:FormLabel>
                        <b:TextBox b:id="username" placeholder="Username or email" ui:field="username"/>
                    </b:FormGroup>

                    <b:FormGroup ui:field="passwordFormGroup">
                        <b:FormLabel for="password">Password</b:FormLabel>
                        <b:Input b:id="password" type="PASSWORD" placeholder="(password)" ui:field="password"/>
                    </b:FormGroup>

                    <b:Button ui:field="login">Login</b:Button>

                </b:FieldSet>
            </b:Form>
        </b:PanelBody>

    </b:Panel>

</ui:UiBinder>
