<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:com.namazustudios.socialengine.client.modal">

    <ui:with field="nameTokens" type="com.namazustudios.socialengine.client.place.NameTokens.ControlPanel"/>

    <g:ScrollPanel>
        <b:Container>
            <b:Navbar position="FIXED_TOP">
                <b:Container>

                    <b:NavbarHeader>
                        <b:NavbarBrand ui:field="brand" targetHistoryToken="{nameTokens.getMain}">Namazu Social Engine</b:NavbarBrand>
                        <b:NavbarCollapseButton dataTarget="#navbar-collapse"/>
                    </b:NavbarHeader>

                    <b:NavbarCollapse b:id="navbar-collapse">
                        <b:NavbarNav>

                            <b:ListDropDown>
                                <b:AnchorButton dataToggle="DROPDOWN">User Management</b:AnchorButton>
                                <b:DropDownMenu>
                                    <b:AnchorListItem>Create New User</b:AnchorListItem>
                                    <b:AnchorListItem>View/Edit Existing Users</b:AnchorListItem>
                                </b:DropDownMenu>
                            </b:ListDropDown>

                            <b:ListDropDown>
                                <b:AnchorButton dataToggle="DROPDOWN">Social Campaigns</b:AnchorButton>
                                <b:DropDownMenu>
                                    <b:AnchorListItem>Create New Campaign</b:AnchorListItem>
                                    <b:AnchorListItem>View/Edit Existing Campaigns</b:AnchorListItem>
                                    <b:AnchorListItem>View/Edit Entrants</b:AnchorListItem>
                                </b:DropDownMenu>
                            </b:ListDropDown>

                            <b:ListDropDown>
                                <b:AnchorButton dataToggle="DROPDOWN">Short Links</b:AnchorButton>
                                <b:DropDownMenu>
                                    <b:AnchorListItem>Create New Short Link</b:AnchorListItem>
                                    <b:AnchorListItem>View/Edit Short Links</b:AnchorListItem>
                                    <b:AnchorListItem>Ranking/Performacne</b:AnchorListItem>
                                </b:DropDownMenu>
                            </b:ListDropDown>

                        </b:NavbarNav>
                    </b:NavbarCollapse>

                </b:Container>
            </b:Navbar>
        </b:Container>
    </g:ScrollPanel>

</ui:UiBinder>
