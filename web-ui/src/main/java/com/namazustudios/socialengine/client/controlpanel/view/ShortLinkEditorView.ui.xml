<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:m="urn:import:com.namazustudios.socialengine.client.modal"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:style>
        .root-panel {
            margin: 0 auto;
            width: 80%;
        }
    </ui:style>

    <b:Panel>

        <m:ErrorModal ui:field="errorModal"/>

        <b:PanelHeader>
            <b:Heading size="H3" text="User Information"/>
        </b:PanelHeader>

        <b:PanelBody>
            <b:Form addStyleNames="{style.root-panel}">

                <b:Legend>Short Link URL</b:Legend>

                <b:FormGroup ui:field="destinationFormGroup">
                    <b:FormLabel for="destination">Username</b:FormLabel>
                    <b:TextBox b:id="destination" placeholder="Destination URL" ui:field="destinationTextBox"/>
                    <b:Label ui:field="destinationWarningLabel" visible="false" text="Destination URL Invalid!" type="DANGER"/>
                </b:FormGroup>

                <b:Button ui:field="create">Submit</b:Button>

            </b:Form>
        </b:PanelBody>

    </b:Panel>
</ui:UiBinder>
