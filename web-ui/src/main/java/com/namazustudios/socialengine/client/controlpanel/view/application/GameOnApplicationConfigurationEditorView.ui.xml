<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:m="urn:import:com.namazustudios.socialengine.client.modal">

    <ui:style>
        .root-panel {
            margin: 0 auto;
            width: 80%;
        }
    </ui:style>

    <ui:with field="nameTokens" type="com.namazustudios.socialengine.client.controlpanel.NameTokens"/>

    <b:Panel>

        <m:ErrorModal ui:field="errorModal"/>

        <b:PanelHeader>
            <b:Heading size="H3" text="Firebase Configuration"/>
        </b:PanelHeader>

        <b:PanelBody>
            <b:Form addStyleNames="{style.root-panel}">
                <b:FieldSet>

                    <b:Breadcrumbs ui:field="breadcrumbs">
                        <b:AnchorListItem text="Applications" href="#{nameTokens.getApplicationEditTable}"/>
                    </b:Breadcrumbs>

                    <b:FormGroup ui:field="gameIdFormGroup">
                        <b:FormLabel for="gameId">Game ID</b:FormLabel>
                        <b:TextBox placeholder="Game ID" ui:field="gameIdTextBox"/>
                        <b:Label ui:field="gameIdWarningLabel" visible="false" text="Game ID Invalid" type="DANGER"/>
                    </b:FormGroup>

                    <b:FormGroup ui:field="publicApiKeyFormGroup">
                        <b:FormLabel for="publicApiKey">Public API Key</b:FormLabel>
                        <b:TextBox placeholder="Public API Key" ui:field="publicApiKeyTextBox"/>
                        <b:Label ui:field="publicApiKeyWarningLabel" visible="false" text="Public API Key Invalid" type="DANGER"/>
                    </b:FormGroup>

                    <b:FormGroup ui:field="adminApiKeyFormGroup">
                        <b:FormLabel for="adminApiKey">Admin API Key</b:FormLabel>
                        <b:TextBox placeholder="Admin API Key" ui:field="adminApiKeyTextBox"/>
                        <b:Label ui:field="adminApiKeyWarningLabel" visible="false" text="Admin API Key Invalid" type="DANGER"/>
                    </b:FormGroup>

                    <b:FormGroup ui:field="publicKeyFormGroup">
                        <b:FormLabel for="publicKey">Public Key</b:FormLabel>
                        <b:TextArea placeholder="Public Key" ui:field="publicKeyTextArea"/>
                        <b:Label ui:field="publicKeyWarningLabel" visible="false" text="Public Key Invalid" type="DANGER"/>
                    </b:FormGroup>

                    <b:Button ui:field="create">Submit</b:Button>

                </b:FieldSet>
            </b:Form>

        </b:PanelBody>

    </b:Panel>

</ui:UiBinder>
