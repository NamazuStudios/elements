<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:m="urn:import:com.namazustudios.socialengine.client.modal"
             xmlns:w="urn:import:com.namazustudios.socialengine.client.widget">

    <ui:style>
        .root-panel {
            margin: 0 auto;
            width: 80%;
        }
    </ui:style>

    <b:Container>

        <b:Row>
            <b:Panel>

                <m:ErrorModal ui:field="errorModal"/>

                <b:PanelHeader>
                    <b:Heading size="H3" text="Application Information"/>
                </b:PanelHeader>

                <b:PanelBody>
                    <b:Form addStyleNames="{style.root-panel}">
                        <b:FieldSet>

                            <b:Legend>Application Details</b:Legend>

                            <b:FormGroup ui:field="nameFormGroup">
                                <b:FormLabel for="username">Application Name</b:FormLabel>
                                <b:TextBox placeholder="Application Name" ui:field="applicationNameTextBox"/>
                                <b:Label ui:field="applicationNameWarningLabel" visible="false" text="Application name must be alpha-numeric." type="DANGER"/>
                            </b:FormGroup>

                            <b:FormGroup ui:field="descriptionFormGroup">
                                <b:FormLabel for="description">Application Description</b:FormLabel>
                                <b:TextBox placeholder="Application Description" ui:field="descriptionTextBox"/>
                                <b:Label ui:field="descriptionWarningLabel" visible="false" text="Description Not Valid" type="DANGER"/>
                            </b:FormGroup>

                        </b:FieldSet>
                    </b:Form>

                </b:PanelBody>
            </b:Panel>
        </b:Row>

        <b:Row>
            <b:Panel>

                <b:PanelHeader>
                    <b:Heading size="H3" text="Application Profiles"/>
                </b:PanelHeader>

                <b:PanelBody>
                    <b:Form addStyleNames="{style.root-panel}">
                        <b:FieldSet>
                        </b:FieldSet>
                    </b:Form>

                </b:PanelBody>

            </b:Panel>
        </b:Row>

    </b:Container>

</ui:UiBinder>