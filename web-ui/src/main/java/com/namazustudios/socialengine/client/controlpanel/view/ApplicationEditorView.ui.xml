<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b.gwt="urn:import:org.gwtbootstrap3.client.ui.gwt"
             xmlns:m="urn:import:com.namazustudios.socialengine.client.modal">

    <ui:style>

        .root-panel {
            margin: 0 auto;
            width: 80%;
        }

        .table {

        }

    </ui:style>

    <b:Container>

        <b:Row>
            <b:Panel>

                <m:ErrorModal ui:field="errorModal"/>

                <b:PanelHeader>
                    <b:Heading size="H3" text="Application Information"/>
                </b:PanelHeader>

                <b:PanelBody>
                    <b:Form addStyleNames="{style.root-panel}">
                        <b:FieldSet>

                            <b:Legend>Application Details</b:Legend>

                            <b:FormGroup ui:field="applicationNameFormGroup">
                                <b:FormLabel for="username">Application Name</b:FormLabel>
                                <b:TextBox placeholder="Application Name" ui:field="applicationNameTextBox"/>
                                <b:Label ui:field="applicationNameWarningLabel" visible="false" text="Application name must be alpha-numeric." type="DANGER"/>
                            </b:FormGroup>

                            <b:FormGroup ui:field="applicationDescriptionFormGroup">
                                <b:FormLabel for="description">Application Description</b:FormLabel>
                                <b:TextBox placeholder="Application Description" ui:field="applicationDescriptionTextBox"/>
                                <b:Label ui:field="applicationDescriptionWarningLabel" visible="false" text="Description Not Valid" type="DANGER"/>
                            </b:FormGroup>

                        </b:FieldSet>
                    </b:Form>

                </b:PanelBody>
            </b:Panel>
        </b:Row>

        <b:Row>
            <b:Panel>

                <b:PanelHeader>
                    <b:Heading size="H3" text="Application Profiles"/>
                </b:PanelHeader>

                <b:PanelBody>
                    <b.gwt:CellTable ui:field="applicationProfileCellTable" bordered="true"
                                        condensed="true"                    striped="true"
                                        hover="true"                        addStyleNames="{style.table}"/>
                </b:PanelBody>

                <b:Pagination ui:field="applicationProfileCellTablePagination"/>

            </b:Panel>
        </b:Row>

    </b:Container>

</ui:UiBinder>
