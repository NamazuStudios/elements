<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b.gwt="urn:import:org.gwtbootstrap3.client.ui.gwt"
             xmlns:m="urn:import:com.namazustudios.socialengine.client.modal">

    <ui:style>

        .root-panel {
            margin: 0 auto;
            width: 80%;
        }

        .table {

        }

    </ui:style>

    <ui:with field="nameTokens" type="com.namazustudios.socialengine.client.controlpanel.NameTokens"/>

    <b:Container>

        <m:ErrorModal ui:field="errorModal"/>
        <m:ConfirmationModal ui:field="confirmationModal"/>

        <b:Row>
            <b:Panel>

                <b:PanelHeader>
                    <b:Heading size="H3" text="Application Information"/>
                </b:PanelHeader>

                <b:PanelBody>
                    <b:Form addStyleNames="{style.root-panel}">
                        <b:FieldSet>

                            <b:Legend>Application Details</b:Legend>

                            <b:FormGroup ui:field="applicationNameFormGroup">
                                <b:FormLabel for="name">Application Name</b:FormLabel>
                                <b:TextBox placeholder="Application Name" ui:field="applicationNameTextBox"/>
                                <b:Label ui:field="applicationNameWarningLabel" visible="false" text="Application name must be alpha-numeric." type="DANGER"/>
                            </b:FormGroup>

                            <b:FormGroup ui:field="applicationDescriptionFormGroup">
                                <b:FormLabel for="description">Application Description</b:FormLabel>
                                <b:TextBox placeholder="Application Description" ui:field="applicationDescriptionTextBox"/>
                                <b:Label ui:field="descriptionWarningLabel" visible="false" text="Description Not Valid" type="DANGER"/>
                            </b:FormGroup>

                            <b:FormGroup ui:field="applicationScriptRepoUrlFormGroup">
                                <b:FormLabel for="scriptRepoUrl">Application Repository</b:FormLabel>
                                <b:TextBox placeholder="(repo url)" ui:field="scriptRepoUrlTextBox"/>
                            </b:FormGroup>

                            <b:Button ui:field="create">Submit</b:Button>

                        </b:FieldSet>
                    </b:Form>

                </b:PanelBody>
            </b:Panel>
        </b:Row>

        <b:Row ui:field="addConfigurationDropDownRow">
            <b:DropDown>
                <b:Button icon="PLUS" dataToggle="DROPDOWN" />
                <b:DropDownMenu>
                    <b:AnchorListItem ui:field="createIos" icon="MOBILE_PHONE">iOS AppStore</b:AnchorListItem>
                    <b:AnchorListItem ui:field="createAndroidGooglePlay" icon="MOBILE_PHONE">Android Google Play</b:AnchorListItem>
                    <b:AnchorListItem ui:field="createFacebook" icon="FACEBOOK">Facebook</b:AnchorListItem>
                    <b:AnchorListItem ui:field="createPS4" icon="GAMEPAD">Playstation Network (PS4)</b:AnchorListItem>
                    <b:AnchorListItem ui:field="createVita" icon="GAMEPAD">Playstation Network (Vita)</b:AnchorListItem>
                </b:DropDownMenu>
            </b:DropDown>
        </b:Row>

        <b:Row ui:field="configurationsTableRow">
            <b:Panel>

                <b:PanelHeader>
                    <b:Heading size="H3" text="Application Configurations"/>
                </b:PanelHeader>

                <b:PanelBody>
                    <b.gwt:CellTable ui:field="applicationConfigurationCellTable" bordered="true"
                                     condensed="true" striped="true"
                                     hover="true" addStyleNames="{style.table}"/>
                </b:PanelBody>

                <b:Pagination ui:field="applicationConfigurationCellTablePagination"/>

            </b:Panel>
        </b:Row>

    </b:Container>

</ui:UiBinder>
