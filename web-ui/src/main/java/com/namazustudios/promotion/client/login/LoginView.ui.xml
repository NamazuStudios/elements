<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <b:Form>
        <b:FieldSet>

            <b:Legend>Welcome!</b:Legend>

            <b:FormGroup>
                <b:FormLabel for="username">Login</b:FormLabel>
                <b:TextBox b:id="username" placeholder="Username or email"/>
            </b:FormGroup>

            <b:FormGroup>
                <b:FormLabel for="password">Password</b:FormLabel>
                <b:Input b:id="password" type="PASSWORD"/>
            </b:FormGroup>

            <b:Button>Send</b:Button>

        </b:FieldSet>
    </b:Form>
</ui:UiBinder>