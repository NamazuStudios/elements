            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>${dependency.plugin.version}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>properties</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>${exec.plugin.version}</version>
                <executions>
                    <execution>
                        <id>my-exec</id>
                        <phase>install</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <inherited>false</inherited>
                    </execution>
                </executions>
                <configuration>
                    <workingDiregory>${project.basedir}</workingDiregory>
                    <executable>docker</executable>
                    <arguments>
                        <argument>build</argument>
                        <argument>${project.basedir}</argument>
                        <argument>--build-arg</argument>
                        <argument>restWar=${com.namazustudios.socialengine:rest-war:war}</argument>
                        <argument>--build-arg</argument>
                        <argument>webUiWar=${com.namazustudios.socialengine:web-ui-war:war}</argument>
                    </arguments>
                </configuration>
            </plugin>
        </plugins>
    </build>

