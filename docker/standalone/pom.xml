<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <parent>
        <artifactId>docker</artifactId>
        <groupId>com.namazustudios.socialengine</groupId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <packaging>pom</packaging>

    <groupId>com.namazustudios.socialengine</groupId>
    <artifactId>standalone</artifactId>
    <version>1.0-SNAPSHOT</version>

    <description>Generates a Docker image for a debug standalone version of SocialEngine.</description>

    <dependencies>
        <dependency>
            <groupId>com.namazustudios.socialengine</groupId>
            <artifactId>rest-war</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>com.namazustudios.socialengine</groupId>
            <artifactId>web-ui-war</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>com.namazustudios.socialengine</groupId>
            <artifactId>setup</artifactId>
            <version>${project.version}</version>
            <classifier>jar-with-dependencies</classifier>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>initialize</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeScope>runtime</includeScope>
                            <overWriteReleases>false</overWriteReleases>
                            <outputDirectory>${project.build.directory}/lib</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>${exec.plugin.version}</version>
                <executions>
                    <execution>
                        <id>my-exec</id>
                        <phase>install</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <inherited>false</inherited>
                    </execution>
                </executions>
                <configuration>
                    <workingDirectory>${project.basedir}</workingDirectory>
                    <executable>docker</executable>
                    <arguments>
                        <argument>build</argument>
                        <argument>${project.basedir}</argument>
                        <argument>--build-arg</argument>
                        <argument>REST_WAR=target/lib/rest-war-${project.version}.war</argument>
                        <argument>--build-arg</argument>
                        <argument>WEB_UI_WAR=target/lib/web-ui-war-${project.version}.war</argument>
                        <argument>--build-arg</argument>
                        <argument>SETUP_JAR=target/lib/setup-${project.version}-jar-with-dependencies.jar</argument>
                        <argument>--tag</argument>
                        <argument>socialengine-standalone:${project.version}</argument>
                    </arguments>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>