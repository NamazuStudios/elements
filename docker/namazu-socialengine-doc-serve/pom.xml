<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.namazustudios.socialengine</groupId>
        <artifactId>docker</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <artifactId>namazu-socialengine-doc-serve</artifactId>
    <version>1.0-SNAPSHOT</version>
    <name>namazu-socialengine-doc-serve</name>

    <dependencies>

        <dependency>
            <groupId>com.namazustudios.socialengine</groupId>
            <artifactId>doc-serve</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
            <version>${logback.version}</version>
        </dependency>

        <!-- These are the actual documentation artifacts -->

        <dependency>
            <groupId>com.namazustudios.socialengine</groupId>
            <artifactId>common</artifactId>
            <version>${project.version}</version>
            <classifier>luastubs</classifier>
        </dependency>

        <dependency>
            <groupId>com.namazustudios.socialengine</groupId>
            <artifactId>common-lua</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>com.namazustudios.socialengine</groupId>
            <artifactId>rt-server-lua</artifactId>
            <version>${project.version}</version>
            <classifier>luastubs</classifier>
        </dependency>

        <dependency>
            <groupId>com.namazustudios.socialengine</groupId>
            <artifactId>service</artifactId>
            <version>${project.version}</version>
            <classifier>luastubs</classifier>
        </dependency>

        <dependency>
            <groupId>com.namazustudios.socialengine</groupId>
            <artifactId>dao</artifactId>
            <version>${project.version}</version>
            <classifier>luastubs</classifier>
        </dependency>

        <dependency>
            <groupId>com.namazustudios.socialengine</groupId>
            <artifactId>rt-server-lua</artifactId>
            <version>${project.version}</version>
            <classifier>luastubs</classifier>
        </dependency>

        <dependency>
            <groupId>com.namazustudios.socialengine</groupId>
            <artifactId>common-util</artifactId>
            <version>${project.version}</version>
            <classifier>luastubs</classifier>
        </dependency>

        <!-- End Documentation Artifacts -->

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>initialize</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeScope>runtime</includeScope>
                            <overWriteReleases>false</overWriteReleases>
                            <outputDirectory>${project.build.directory}/lib</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
