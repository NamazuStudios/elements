<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="JeroMQRoutingServer" level="info">
        <appender-ref ref="STDOUT" />
    </logger>

    <logger name="org.openapitools.codegen" level="ERROR"/>

    <logger name="com.github.sidhant92.boolparser" level="OFF"/>

</configuration>
